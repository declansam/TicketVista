
{{!-- Display the error/ access rights here --}}
{{#if error}}

    <h1 class="text-red-600 text-2xl font-bold my-4">{{error}}</h1>

{{/if}}


{{!-- If an admin is accessing this page, display the following --}}
{{#unless error}}

    <div class="admin-new-container p-4 bg-white shadow-md rounded-md">

        {{!-- Title --}}
        <div class="title text-2xl font-bold mb-4">
            <h1>Add a New Event</h1>
        </div>


        <div class="admin-new-form">

            {{!-- Form --}}
            <form method = "POST">

                {{!-- Event Name --}}
                <div class="mb-4">
                    
                    <label for="title" class="block text-gray-600 text-sm font-semibold">Title:</label>
                    <input type="text" id="title" name="title" value="" required class="w-full px-3 py-2 border rounded-md">
                
                </div>

                {{!-- Event Date --}}
                <div class="mb-4">

                    <label for="date" class="block text-gray-600 text-sm font-semibold">Date:</label>
                    <input type="date" id="date" name="date" value="" required class="w-full px-3 py-2 border rounded-md">
                
                </div>

                {{!-- Event Venue --}}
                <div class="mb-4">

                    <label for="venue" class="block text-gray-600 text-sm font-semibold">Venue:</label>
                    <input type="text" id="venue" name="venue" value="" required class="w-full px-3 py-2 border rounded-md">
               
                </div>
                

                {{!-- Price --}}
                <div class="mb-4">

                    <label for="price" class="block text-gray-600 text-sm font-semibold">Price:</label>
                    <input type="number" id="price" name="price" value="" required class="w-full px-3 py-2 border rounded-md">
                
                </div>

                {{!-- Description --}}
                <div class="mb-4">

                    <label for="description" class="block text-gray-600 text-sm font-semibold">Description:</label>
                    <textarea id="description" name="description" rows="5" cols="40" required class="w-full px-3 py-2 border rounded-md"></textarea>

                </div>
                

                {{!-- Submit --}}
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md hover:shadow-md focus:outline-none focus:ring focus:ring-blue-300">
                    Submit
                </button>

            </form>

        </div>

    </div>


{{/unless}}